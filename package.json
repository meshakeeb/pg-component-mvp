{
  "name": "pg-monorepo",
  "private": true,
  "version": "1.0.0",
  "packageManager": "bun@1.1.10",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter project-a dev",
    "dev:pg": "bun run --filter @mm/pg dev",
    "build": "bun run build:packages && bun run build:apps",
    "build:packages": "bun run --filter './packages/*' build",
    "build:apps": "bun run --filter './apps/*' build",
    "clean": "bun run --filter '*' clean"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "bun": ">=1.1.10"
  }
}
