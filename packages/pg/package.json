{
  "name": "@mm/pg",
  "version": "1.0.0",
  "description": "Component library for mm",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:lib\" \"npm run dev:css\"",
    "dev:lib": "tsc --watch",
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "build:css": "tailwindcss -i ./src/components.css -o ./dist/components.css --minify",
    "dev:css": "tailwindcss -i ./src/components.css -o ./dist/components.css --watch"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^9.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11"
  }
}
